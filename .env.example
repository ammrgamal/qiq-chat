# QuickITQuote Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# OpenAI Configuration (Optional)
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o-mini

# ============================================
# Google Gemini Configuration (Optional)
# ============================================
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=xxxxxxxxxxxxxxxxxxxx
GEMINI_MODEL=gemini-1.5-flash
# Alternative Gemini key name (also supported)
Gemini_API=xxxxxxxxxxxxxxxxxxxx

# ============================================
# Google Custom Search (Optional)
# ============================================
# For product image search in enrichment module
# Get CX ID from: https://programmablesearchengine.google.com/
GOOGLE_CX_ID=xxxxxxxxxxxxxxxxxxxx

# ============================================
# Algolia Configuration
# ============================================
# Get credentials from: https://www.algolia.com/dashboard
ALGOLIA_APP_ID=your_app_id
ALGOLIA_ADMIN_API_KEY=your_admin_api_key
ALGOLIA_SEARCH_API_KEY=your_search_api_key
ALGOLIA_INDEX_NAME=quickitquote_products

# ============================================
# Email Configuration (Resend)
# ============================================
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx

# ============================================
# CRM Configuration (HelloLeads)
# ============================================
HELLO_LEADS_API_KEY=your_hello_leads_api_key

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
PORT=3000
AUTO_APPROVE=true

# ============================================
# Database Configuration
# ============================================
# Note: SQL Server database credentials are configured in 
# rules-engine/config/dbConfig.json for security reasons
# You can still override here if needed:
SQL_SERVER=YOUR_SERVER\SQLEXPRESS
SQL_DB=QuoteWerks
SQL_USER=
SQL_PASSWORD=

# ============================================
# Enrichment Pipeline
# ============================================
ENRICH_VERSION=v1.0.0
ENRICH_STORAGE_MODE=sqlite
ENRICH_SQLITE_PATH=rules-engine/.enrich.db
ENRICH_BATCH_SIZE=50
ENRICH_MAX_CONCURRENCY=3
ENRICH_DRY_RUN=0
ENRICHMENT_AWAIT=0

# ============================================
# Backup Settings
# ============================================
BACKUP_DIR=backups
BACKUP_KEEP_COUNT=7
BACKUP_COMPRESS=1
BACKUP_RETENTION_DAYS=14
BACKUP_WEBHOOK_URL=
BACKUP_DRY_RUN=0

# ============================================
# Arabic / Translation (Optional)
# ============================================
AI_TRANSLATE_PROVIDER=none
ARABIC_QUERY_EXPANSION=1

# ============================================
# Monitoring / Logging
# ============================================
LOG_LEVEL=info
