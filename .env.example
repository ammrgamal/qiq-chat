# QuickITQuote Environment Variables Template
# Copy this file to .env and fill in your actual values

# Algolia Configuration
ALGOLIA_APP_ID=your_algolia_app_id
ALGOLIA_API_KEY=your_algolia_admin_api_key
ALGOLIA_SEARCH_KEY=your_algolia_search_only_key
ALGOLIA_PUBLIC_API_KEY=your_algolia_public_key
ALGOLIA_INDEX=woocommerce_products
ALGOLIA_INDEX_NAME=rules_engine

# OpenAI Configuration (for PDF AI features)
OPENAI_API_KEY=your_openai_api_key

# Gemini Configuration (alternative AI provider)
GEMINI_API_KEY=your_gemini_api_key

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key

# CRM Integration (HelloLeads)
HELLO_LEADS_API_KEY=your_helloleads_api_key
HELLO_LEADS_DOMAIN=your_helloleads_domain

# Application Configuration
PORT=3037
NODE_ENV=development

# Feature Flags
AUTO_APPROVE=false
